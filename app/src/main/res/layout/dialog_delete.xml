<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_dialog"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_delete_title"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="?android:attr/textColor"/>

    <LinearLayout
        android:layout_below="@+id/title_dialog"
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_delete_btn_negative"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:theme="@style/AppTheme.ButtonPositive"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_delete_btn_positive"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:theme="@style/AppTheme.ButtonNegative"
            app:cornerRadius="8dp"/>
    </LinearLayout>

</RelativeLayout>